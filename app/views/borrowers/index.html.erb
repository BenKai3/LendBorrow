<p id="notice"><%= notice %></p>

<h1>Listing Borrowers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Money</th>
      <th>Purpose</th>
      <th>Description</th>
      <th>Raised</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrowers.each do |borrower| %>
      <tr>
        <td><a href="/borrowers/<%= borrower.id %>"><%= borrower.first_name %></a></td>
        <td><a href="/borrowers/<%= borrower.id %>"><%= borrower.last_name %></a></td>
        <td><%= borrower.email %></td>
        <td><%= borrower.money %></td>
        <td><%= borrower.purpose %></td>
        <td><%= borrower.description %></td>
        <td><%= borrower.raised %></td>
        <td><%= borrower.created_at %></td>
        <td><%= borrower.updated_at %></td>
        <td><%= link_to 'Show', borrower %></td>
        <td><%= link_to 'Edit', edit_borrower_path(borrower) %></td>
        <td><%= link_to 'Destroy', borrower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>