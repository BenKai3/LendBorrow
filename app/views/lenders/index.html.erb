<p id="notice"><%= notice %></p>

<h1>Listing Lenders</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Salt</th>
      <th>Money</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lenders.each do |lender| %>
      <tr>
        <td><a href="/lenders/<%= lender.id %>"><%= lender.first_name %></a></td>
        <td><a href="/lenders/<%= lender.id %>"><%= lender.last_name %></a></td>
        <td><%= lender.email %></td>
        <td><%= lender.money %></td>
        <td><%= lender.created_at %></td>
        <td><%= lender.updated_at %></td>
        <td><%= link_to 'Show', lender %></td>
        <td><%= link_to 'Edit', edit_lender_path(lender) %></td>
        <td><%= link_to 'Destroy', lender, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
