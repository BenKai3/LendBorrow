<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
	$('#loginDiv').hide();
	$('#login_button').hover(function(){
		$('#loginDiv').slideDown();
	});
	$('#regDiv').hover(function(){
		$('#loginDiv').slideUp();
	});
});
</script>
<div id="img_background">
<h1 id="login_button">Login to Borrow and <span class="lend_green">Lend</span>.</h1>
<div id='loginDiv'>
	<form action="sessions#create" method="post">
		<input type="text" name="email" placeholder="email address"><br>
		<input type="text" name="password"placeholder="password"><br>
		<input type="checkbox" name="lender"> Lender account <br>
		<p>OR</p>
		<input type="checkbox" name="borrower"> Borrower account<br>
  		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<input class="button" type="submit">
	</form>
</div>
	<% if flash[:error] %>
		<p id="errors"><%= flash[:error] %></p>
	<% end %>
</div>
	<h1 id="regDiv">Don't have an account? <a href="/borrowers/new">Register to Borrow</a> or <a href="/lenders/new">Register to Lend</a></h1>